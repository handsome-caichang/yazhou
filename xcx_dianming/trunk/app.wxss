page {
    font-size: 15px;
    color: #333333;
}
view,
input,
image,
text,
textarea {
    box-sizing: border-box;
}
.box {
    display: flex;
}
.box-wrap {
    flex-wrap: wrap;
}
.ellipsis {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
}
.absolute {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}


