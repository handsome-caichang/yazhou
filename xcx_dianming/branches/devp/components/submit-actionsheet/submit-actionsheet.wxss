.submit-actionsheet {
    padding:15px;
    line-height: 1;
}
.title-small {
    color: #666666;
    text-align: center;
}
.title-big {
    text-align: center;
    color: #1E88F5;
    margin: 15px 0 20px 0;
    font-size: 17px;
}
textarea {
    border: 1px solid #ccc;
    padding: 0 10px;
    width: 100%;
    height: 100px;
}
.btns{
    margin-top: 40px;
    display: flex;
    justify-content: flex-end;
}
.btns view {
    height: 28px;
    border-radius: 28px;
    line-height: 28px;
    text-align: center;
    background: #EEF1F6;
}
.btns .cancel{
    width: 90px;
    background: #ffffff;
    border: 1px solid #DDDDDD; 
    color: #666666;
    margin-right: 15px;
}
.btns .confirm{
    width:90px;
    background: #1E88F5;
    color: #ffffff;
}