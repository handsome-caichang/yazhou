@import "/app.wxss";

.list{
      
}


.icon-xiao{
    background:#ddd;
    color:#fff;
    border-radius: 3px;
    padding:0px 5px;
    font-size:12px;
    vertical-align: middle;
    display:inline-block;
    margin-left:2px;
}

.icon.checkbox{
    width:18px;
    height:18px;
    vertical-align: bottom;
}
.list-header{
    box-sizing: border-box;
    width: 750rpx;
    height: 44px;
    background: #f4f4f4;
    font-size: 13px;
    color: #666;
    padding: 0 15px;
}

.list-header.fixed{
    position:fixed;
    top:0;
    z-index:100;
}


.col-1 {
    flex: 1 1 calc(100% - 235px);
    max-width: 100px;
}
.col-2 {
    flex: 1 0 50px;
    padding:10px 0;
}
.col-3 {
    flex: 1 0 95px;
    word-break: break-all;
    padding:10px 0;
}
.col-4 {
    flex: 1 0 35px;
    padding:10px 0;
}
.col-5 {
    flex: 1 0 60px;
    padding:10px 0;
}
.col-5 .icon{
    width:18px;
    height:3.5px;
}

.list-item{
    border-bottom:1px solid #F4F4F4;
}

.student-item{
    box-sizing: border-box;
    padding:0 15px;
    min-height:44px;
    font-size: 15px;
    width:100%;
}

.student-item>.col-1{
    word-break: break-all;
    padding: 10px 5px 10px 0;
    box-sizing: border-box;
}

.student-item>.col-1 rich-text{
    display:inline-block;
}

.student-item>.col-1 .icon{
    display:inline-block;
    width: 9px;
    height: 9px;
    vertical-align: middle;
    margin-left:3px;
}

.student-item>.col-1 .icon.status{
    width: 17px;
    height: 17px;
}
.student-item>.col-1 .icon.status2{
    width: 32px;
    height:16px;
}

.student-item .cost-info{
    margin-left:2px;
    font-size: 13px;
}

.student-item .cost-info .not-enough{
    color: #ff735c;
}

.delete-item{
    padding: 0 15px;
    height: 40px;
    font-size: 13px;
    background-color: #eef1f6;
    color: #999;
}

.delete-item .icon{
    width:18px; height:18px;
    margin-left:3px;
}

.absent-item{
    padding: 0 15px;
    height: 40px;
    line-height: 40px;
    font-size: 13px;
    color: #666;
    text-align: right;
}

.input-like {
    width: 45px;
    height: 24px;
    border: 1px solid #ccc;
    padding: 0 2px;
    line-height: 24px;
    color: #999;
    border-radius: 2px;
    font-size: 13px;
}

.input-like.cost{
    color:#333;
    overflow:hidden;
}

.outAmount-tip{
    position: absolute;
}

.outAmount-tip .content{
    background: #fff;
    position: relative;
    top: 0;
    left: 0;
    border: 1px solid #ddd;
    font-size: 13px;
    line-height: 21.71px;
    padding: 0 3px;
    border-radius: 3px;
}
.outAmount-tip .content:after{
    content:'';
    background:#FFF;
    box-sizing:border-box;
    position:absolute;
    width:8px;
    height:8px;
    left:calc(50% - 4px);
    bottom:-4px;
    border-bottom:1px solid #ddd;
    border-right:1px solid #ddd;
    transform:rotate(45deg);
}