/* pages/courseContent/courseContent.wxss */
.header {
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 16px;
    color: #ffffff;
    background: #1e88f5;
}
.header-content{
    height: 44px;
    padding: 0 15px;
    background: #fff;
    font-size: 14px;
    border-bottom: 1px solid #eef1f6;
}
.body {
    padding: 0 15px;
}
.body-title {
    height: 40px;
    line-height: 40px;
    font-size: 14px;
}
.footer {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50px;
    line-height: 50px;
    text-align: center;
    border-top: 1px solid #eef1f6;
}
.footer .btn {
    flex: 1;
}
.footer .btn:last-child {
    background-color: #1e88f5;
    color: #ffffff;
}
textarea {
    width: 100%;
    margin: 0;
    height: 200px;
}