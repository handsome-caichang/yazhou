.select-user{
    background:#efefef;
    padding: 15px;
    font-size:14px;
    position: absolute;
    top:0;
    left:0;
    bottom:0;
    right:0;
}
.title{
    margin-bottom:15px;
    padding-left:5px;
}

.btn{
    height:40px;
    width:100%;
    line-height: 40px;
    text-align: center;
    background:#1E88F5;
    color:#FFF;
    margin-top:15px;
    margin-bottom:15px;
}

.user-item{
    height:50px;
    border:1px solid #ccc;
    display:flex;
    justify-content: space-between;
    align-items: center;
    background:#fff;
    margin-bottom:10px;
    padding:5px 10px;
}

.user-item .user-name{
    color:#000;
    font-weight: bold;
}

.user-item .user-campus{
    color:#999;
}

.user-delete{
    width:20px;
    height:20px;
}
.user-delete .img{
    width:100%;
    height:100%;
}